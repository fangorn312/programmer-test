<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.geektest2.ResultFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/result_text_view"

        android:textSize="30sp" />

    <TableRow>

        <TextView
            android:id="@+id/res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:text="Name:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/res_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1.5"
            android:textSize="15sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/res_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:text="Universe:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/res_univ_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1.5"
            android:textSize="15sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/res_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:text="Level:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/res_level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1.5"
            android:textSize="15sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/res_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:text="Total:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/res_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1.5"
            android:textSize="15sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/res_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:text="Correct:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/res_correct_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1.5"
            android:textSize="15sp" />
    </TableRow>


    <Button
        android:id="@+id/res_ok_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonstyle"
        android:text="Ok" />

</TableLayout>
